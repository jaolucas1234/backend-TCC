{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Produtos (Node + Prisma + MySQL[MariaDB])",
        "version": "1.0.0",
        "description": "Documentação da API Pedidos"
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "Servidor local"
        }
    ],
    "securityDefinitions": {
        "bearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header",
            "description": "Bearer token para autenticação",
            "scheme": "bearer",
            "bearer format": "JWT",
            "bearer token": "JWT <token>",
            "bearer token description": "Bearer token para autenticação"
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearer format": "JWT"
            }
        }
    },
    "tags": [
        {
            "name": "Teste",
            "description": "Endpoint de teste da API"
        },
        {
            "name": "User",
            "description": "Endpoints para cadastro de usuários"
        },
        {
            "name": "Rotas de Login",
            "description": "Endpoints para login e autenticação"
        },
        {
            "name": "Dados Físicos",
            "description": "Endpoints para manipulação de dados físicos dos usuários"
        },
        {
            "name": "Dados Mentais",
            "description": "Endpoints para manipulação de dados mentais dos usuários"
        },
        {
            "name": "Meditação",
            "description": "Endpoints para manipulação de dados de meditação dos usuários"
        },
        {
            "name": "Meditação do usário",
            "description": "Endpoints para manipulação de dados de meditação do usuário"
        }
        
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Teste"
                ],
                "summary": "Endpoint de teste geral da API",
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de teste"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            }
        },
        "/login": {
            "get": {
                "tags": [
                    "Rotas de Login"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para validar o login",
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "401": {
                        "description": "Token inválido ou expirado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Rotas de Login"
                ],
                "summary": "Endpoint para fazer o login",
                "requestBody": {
                    "description": "Dados de login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "user@example.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "validade": {
                                        "type": "integer",
                                        "default": 30
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao fazer login, verifique e-mail e senha"
                    }
                }
            }
        },
        "/user": {
            "get":{
                "tags": [
                    "User"
                ],
                "summary": "Endpoint para listar usuários",
                "security": [{"bearerAuth": []}],
                "responses": {
                    "200": {
                        "description": "Lista de usuários retornada com sucesso"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            },
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Endpoint para cadastro de usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "senha": {
                                        "type": "string"
                                    },
                                    "nascimento":{
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "genero": {
                                        "type": "string",
                                        "enum": ["MASCULINO", "FEMININO"]
                                    }
                                    
                                },
                                "required": ["name", "email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário cadastrado com sucesso"
                    },
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            }
        },
        "/dadosfisicos": {
        "get": {
            "tags": ["Dados Físicos"],
            "summary": "Endpoint para listar dados físicos",
            "security": [{"bearerAuth": []}],
            "responses": {
                "200": {
                    "description": "Lista de dados físicos retornada com sucesso"
                },
                "500": {
                    "description": "Erro ao processar a requisição"
                }
            }
        },
        "post": {
            "tags": ["Dados Físicos"],
            "summary": "Endpoint para cadastrar dados físicos",
            "security": [{"bearerAuth": []}],  
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id_user": {
                                    "type": "integer",
                                    "description": "ID do usuário associado"
                                },
                                "altura": {
                                    "type": "number",
                                    "format": "float",
                                    "description": "Altura em metros"
                                },
                                "peso": {
                                    "type": "number",
                                    "format": "float",
                                    "description": "Peso em kg"
                                },
                                "idade": {
                                    "type": "integer",
                                    "description": "Idade em anos"
                                },
                                "sexo": {
                                    "type": "string",
                                    "enum": ["MASCULINO", "FEMININO"],
                                    "description": "Sexo biológico"
                                },
                                "exeReg": {
                                    "type": "string",
                                    "description": "Frequência de exercícios"
                                },
                                "obj": {
                                    "type": "string",
                                    "description": "Objetivo físico"
                                },
                                "deli": {
                                    "type": "string",
                                    "description": "Restrições alimentares"
                                }
                            },
                            "required": ["id_user", "altura", "peso", "idade", "sexo"]  
                        }
                    }
                }
            },
            "responses": {
                "201": {
                    "description": "Dados físicos cadastrados com sucesso"
                },
                "400": {
                    "description": "Dados inválidos"
                },
                "500": {
                    "description": "Erro ao processar a requisição"
                }
            }
        }
    },
